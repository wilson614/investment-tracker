[
  {
    "id": "deploy",
    "execute-command": "/scripts/deploy.sh",
    "command-working-directory": "/scripts",
    "response-message": "Deployment started",
    "trigger-rule": {
      "match": {
        "type": "value",
        "value": "{{ getenv \"DEPLOY_TOKEN\" }}",
        "parameter": {
          "source": "header",
          "name": "X-Webhook-Token"
        }
      }
    }
  }
]
